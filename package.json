{
  "name": "pos-saas",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.28.0",
  "description": "Multi-tenant POS SaaS Platform",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "dev:backend": "turbo run dev --filter=@pos-saas/backend",
    "dev:admin": "turbo run dev --filter=@pos-saas/admin-portal",
    "dev:pos": "turbo run dev --filter=@pos-saas/pos-terminal",
    "dev:owner": "turbo run dev --filter=@pos-saas/owner-portal",
    "dev:desktop": "turbo run dev --filter=@pos-saas/desktop",
    "build:all": "turbo run build",
    "clean": "turbo run clean && rimraf node_modules",
    "db:setup": "pnpm --filter @pos-saas/backend run db:setup",
    "db:migrate": "pnpm --filter @pos-saas/backend run prisma:migrate",
    "db:seed": "pnpm --filter @pos-saas/backend run prisma:seed"
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
